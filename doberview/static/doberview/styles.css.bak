/* navbar container */
.navbar {
    overflow: hidden;
    background-color: #000000;
    font-family: Serif;
}

/* links in the navbar */
.navbar a {
    float: left;
    display: block;
    font-size: 16px;
    color: white;
    text-align: center;
    padding: 15px 15px;
    text-decoration: none;
}

/* dropdown container */
.dropbtn {
    float: left;
    overflow: hidden;
    text-align: center;
}

/* buttons in dropdown */
.dropdown .dropbtn {
    font-size: 16px;
    border: none;
    outline: none;
    color: white;
    background-color: #111111;
    padding: inherit;
}

/* color for links on hover */
.navbar a:hover, .dropdown:hover, .dropbtn {
    background-color: #111177;
}

/* dropdown content */
.dropdown-content {
    display: none;
    position: absolute;
    background-color: #111177;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
}

/* links inside dropdown */
.dropdown-content a {
    float: none;
    color: white;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    text-align: left;
}

/* background color for dropdown links on hover */
.dropdown-content a:hover {
    background-color: #222288;
}

/* show the dropdown on hover. why is this needed? */
.dropdown:hover .dropdown-content {
    display: block;
}

